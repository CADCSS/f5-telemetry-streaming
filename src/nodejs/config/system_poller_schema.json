{
    "$id": "system_poller_schema.json",
    "$async": true,
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "Telemetry services system poller schema",
    "description": "",
    "type": "object",
    "allOf": [
        {
            "if": { "properties": { "class": { "const": "Telemetry_System_Poller" } } },
            "then": {
                "required": [
                    "class",
                    "interval"
                ],
                "properties": {
                    "class": {
                        "title": "Class",
                        "description": "Telemetry services system poller class",
                        "type": "string",
                        "enum": [ "Telemetry_System_Poller" ]
                    },
                    "enable": {
                        "title": "Enable",
                        "description": "" ,
                        "type": "boolean",
                        "default": true
                    },
                    "trace": {
                        "title": "Trace",
                        "description": "Enables data dumping to file. Value could be string - path to file to dump data to." ,
                        "type": ["boolean", "string"],
                        "default": false
                    },
                    "interval": {
                        "title": "Collection interval (in seconds)",
                        "description": "" ,
                        "type": "integer",
                        "minimum": 60,
                        "maximum": 6000,
                        "default": 300
                    },
                    "host": {
                        "title": "Host",
                        "description": "" ,
                        "type": "string",
                        "format": "hostname",
                        "default": "localhost"
                    },
                    "port": {
                        "title": "Port",
                        "description": "" ,
                        "type": "integer",
                        "minimum": 0,
                        "maximum": 65535,
                        "default": 8100
                    },
                    "protocol": {
                        "title": "Protocol",
                        "description": "" ,
                        "type": "string",
                        "enum": [ "http", "https" ],
                        "default": "http"
                    },
                    "username": {
                        "title": "Username",
                        "description": "" ,
                        "type": "string"
                    },
                    "passphrase": { "$ref": "base_schema.json#/definitions/secret" }
                },
                "additionalProperties": false
            },
            "else": {}
        }
    ]
}