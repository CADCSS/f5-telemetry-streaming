{
    "$id": "consumer_schema.json",
    "$async": true,
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "Telemetry streaming consumer schema",
    "description": "",
    "type": "object",
    "allOf": [
        {
            "if": { "properties": { "class": { "const": "Telemetry_Consumer" } } },
            "then": {
                "required": [
                    "class",
                    "type"
                ],
                "properties": {
                   "class": {
                       "title": "Class",
                       "description": "Telemetry streaming consumer class",
                       "type": "string",
                       "enum": [ "Telemetry_Consumer" ]
                   },
                   "enable": {
                        "title": "Enable",
                        "description": "" ,
                        "type": "boolean",
                        "default": true
                    },
                    "trace": {
                        "title": "Trace",
                        "description": "Enables data dumping to file. Value could be string - path to file to dump data to." ,
                        "type": ["boolean", "string"],
                        "default": false
                    },
                    "type": {
                        "title": "Type",
                        "description": "" ,
                        "type": "string",
                        "enum": [ "default", "Splunk", "Graphite", "Azure_Log_Analytics", "AWS_S3", "AWS_CloudWatch", "Kafka" ]
                    },
                    "host": {
                        "$comment": "Required for certain consumers: standard property",
                        "title": "Host",
                        "description": "" ,
                        "type": "string",
                        "anyOf": [
                            { "format": "ipv4" },
                            { "format": "ipv6" },
                            { "format": "hostname" }
                        ],
                        "hostNetworkCheck": true         
                    },
                    "enableHostReachableCheck": { "$ref": "base_schema.json#/definitions/enableHostReachableCheck" },
                    "port": {
                        "$comment": "Required for certain consumers: standard property",
                        "title": "Port",
                        "description": "" ,
                        "type": "integer",
                        "minimum": 0,
                        "maximum": 65535
                    },
                    "protocol": {
                        "$comment": "Required for certain consumers: standard property",
                        "title": "Protocol",
                        "description": "" ,
                        "type": "string",
                        "enum": [ "http", "https" ]
                    },
                    "username": {
                        "$comment": "Required for certain consumers: standard property",
                        "title": "Username",
                        "description": "" ,
                        "type": "string"
                    },
                    "region": {
                        "$comment": "Required for certain consumers: Azure LA, AWS CW, AWS S3",
                        "title": "Region",
                        "description": "" ,
                        "type": "string"
                    },
                    "bucket": {
                        "$comment": "Required for certain consumers: AWS S3",
                        "title": "Bucket",
                        "description": "" ,
                        "type": "string"
                    },
                    "logGroup": {
                        "$comment": "Required for certain consumers: AWS CW",
                        "title": "Log Group",
                        "description": "" ,
                        "type": "string"
                    },
                    "logStream": {
                        "$comment": "Required for certain consumers: AWS CW",
                        "title": "Log Stream",
                        "description": "" ,
                        "type": "string"
                    },
                    "format": {
                        "$comment": "Required for certain consumers: Splunk",
                        "title": "Splunk consumer output format",
                        "description": "",
                        "type": "string",
                        "default": "default",
                        "enum": [
                            "default",
                            "f5dashboard"
                        ]
                    },
                    "workspaceId": {
                        "$comment": "Required for certain consumers: Azure LA",
                        "title": "Workspace ID",
                        "description": "" ,
                        "type": "string"
                    },
                    "topic": {
                        "$comment": "Required for certain consumers: Kafka",
                        "title": "Topic",
                        "description": "" ,
                        "type": "string"
                    },
                    "passphrase": { "$ref": "base_schema.json#/definitions/secret" }
                },
                "additionalProperties": false
            },
            "else": {}
        }
    ]
}