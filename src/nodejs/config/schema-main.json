{
    "$id": "telemetry-svcs-main",
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "Telemetry services",
    "description": "Telemetry services",
    "type": "object",
    "definitions": {
        "consumer": {
            "type": "object",
            "properties": {
                "consumer": {
                    "title": "Consumer type",
                    "description": "",
                    "type": "string",
                    "enum": [
                        "Splunk",
                        "Azure_Log_Analytics"
                    ]
                },
                "api": {
                    "title": "API configuration",
                    "description": "",
                    "type": "object",
                    "properties": {
                        "path": {
                            "title": "API path to post data",
                            "description": "",
                            "type": "string"
                        },
                        "token": {
                            "title": "API auth token",
                            "description": "",
                            "type": [ "string", "object" ]
                        },
                        "gzip": {
                            "title": "Compress data",
                            "description": "",
                            "type": "boolean",
                            "default": true
                        }
                    },
                    "required": [
                        "token"
                    ]
                },
                "destination": {
                    "title": "Destination host/address",
                    "description": "",
                    "type": "object",
                    "properties": {
                        "address": {
                            "title": "Address",
                            "description": "",
                            "type": "string"
                        },
                        "port": {
                            "title": "Port",
                            "description": "",
                            "type": "integer"
                        },
                        "protocol": {
                            "title": "Protocol",
                            "description": "",
                            "type": "string",
                            "enum": [
                                "http",
                                "https"
                            ]
                        }
                    },
                    "default": [
                        { "port": 80 },
                        { "protocol": "http" }
                    ],
                    "required": [
                        "address"
                    ]
                }
            },
            "required": [
                "consumer",
                "destination",
                "api"
            ]
        }
    },
    "properties": {
       "class": {
           "title": "Class",
           "description": "Indicates the structure of this request",
           "type": "string",
           "enum": [ "Telemetry" ]
       },
       "interval": {
           "title": "Collection Interval (in seconds)",
           "description": "" ,
           "type": "integer",
           "minimum": 30,
           "maximum": 600,
           "default": 60
       },
       "targetHosts": {
            "title": "Target hosts to collect telemetry from",
            "description": "" ,
            "type": "array",
            "minItems": 1,
            "maxItems": 1,
            "items": {
                "type": "object",
                "properties": {
                    "host": {
                        "type": "string"
                    },
                    "username": {
                        "type": ["string", "null"]
                    },
                    "password": {
                        "type": ["string", "null"]
                    }
                },
                "required": [
                    "host"
                ]
            },
            "default": [{ "host": "localhost" }]
        },
        "consumers": {
            "title": "Analytics data consumers",
            "description": "",
            "type": "array",
            "uniqueItems": true,
            "items": {"$ref": "#/definitions/consumer" }
        }
    },
    "required": [
        "class"
    ]
}