{
    "$id": "telemetry-svcs-main",
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "Telemetry services title",
    "description": "Telemetry services description",
    "type": "object",
    "definitions": {
        "consumer": {
            "type": "object",
            "properties": {
                "consumer": {
                    "title": "Consumer type",
                    "description": "",
                    "type": "string",
                    "enum": [
                        "Splunk",
                        "Sumo"
                    ]
                },
                "api": {
                    "title": "API configuration",
                    "description": "",
                    "type": "object",
                    "properties": {
                        "path": {
                            "title": "API path to post data",
                            "description": "",
                            "type": "string",
                            "default": ""
                        },
                        "token": {
                            "title": "API auth token",
                            "description": "",
                            "type": "string"
                        },
                        "gzip": {
                            "title": "Compress data",
                            "description": "",
                            "type": "boolean",
                            "default": true
                        }
                    },
                    "required": [
                        "token"
                    ]
                },
                "destination": {
                    "title": "Destination host/address",
                    "description": "",
                    "type": "object",
                    "properties": {
                        "address": {
                            "title": "Address",
                            "description": "",
                            "type": "string"
                        },
                        "port": {
                            "title": "Port",
                            "description": "",
                            "type": "integer"
                        },
                        "protocol": {
                            "title": "Protocol",
                            "description": "",
                            "type": "string",
                            "default": "http",
                            "enum": [
                                "http",
                                "https"
                            ]
                        }
                    },
                    "required": [
                        "address",
                        "port"
                    ]
                }
            },
            "required": [
                "consumer",
                "destination"
            ]
        }
    },
    "properties": {
        "class": {
            "title": "Class",
            "description": "Indicates the structure of this request",
            "type": "string",
            "enum": [ "Telemetry" ]
        },
        "interval": {
            "title": "Collection Interval (in seconds)",
            "description": "" ,
            "type": "integer",
            "minimum": 10,
            "maximum": 600,
            "default": 30
        },
        "consumers": {
            "title": "Analytics data consumers",
            "description": "",
            "type": "array",
            "uniqueItems": true,
            "items": {"$ref": "#/definitions/consumer" }
        }
    },
    "required": [
        "class",
        "consumers"
    ]
}