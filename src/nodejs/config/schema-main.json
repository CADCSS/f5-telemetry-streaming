{
    "$id": "telemetry-svcs-main",
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "Telemetry services title",
    "description": "Telemetry services description",
    "type": "object",
    "definitions": {
        "proxy": {
            "type": "object",
            "properties": {
                "address": {
                    "title": "Proxy server's address",
                    "description": "",
                    "type": "string"
                },
                "port": {
                    "title": "Proxy server's port",
                    "description": "",
                    "type": "string"
                },
                "user": {
                    "title": "Proxy server's user for auth",
                    "description": "",
                    "type": "string"
                },
                "password": {
                    "title": "Proxy server's password for auth",
                    "description": "",
                    "type": "string"
                }
            },
            "required": [
                "address",
                "port"
            ]
        },
        "consumer": {
            "type": "object",
            "properties": {
                "consumer": {
                    "title": "Consumer type",
                    "description": "",
                    "type": "string",
                    "enum": [
                        "Splunk",
                        "Sumo"
                    ]
                },
                "api_key": {
                    "title": "API auth token/key",
                    "description": "",
                    "type": "string"
                },
                "destination": {
                    "title": "Destination host/address",
                    "description": "proto://address[:port]",
                    "type": "string"
                },
                "api_path": {
                    "title": "API URL path to post data to",
                    "description": "/path/to/post/data",
                    "type": "string"
                },
                "proxy": { "$ref": "#/definitions/proxy" }
            },
            "required": [
                "consumer",
                "api_key",
                "destination"
            ]
        }
    },
    "properties": {
        "class": {
            "title": "Class",
            "description": "Indicates the structure of this request",
            "type": "string",
            "enum": [ "Telemetry" ]
        },
        "interval": {
            "title": "Collection Interval (in seconds)",
            "description": "" ,
            "type": "integer",
            "minimum": 10,
            "maximum": 600,
            "default": 30
        },
        "consumers": {
            "title": "Analytics data consumers",
            "description": "",
            "type": "array",
            "minItems": 1,
            "uniqueItems": true,
            "items": {"$ref": "#/definitions/consumer" }
        },
        "proxy": { "$ref": "#/definitions/proxy" }
    },
    "required": [
        "class",
        "consumers"
    ]
}